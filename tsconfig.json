{
  "include": [
    "src/**/*",
    "src/custom.d.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "importHelpers": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@redux/*": [
        "src/redux/*"
      ],
      "@actions/*": [
        "src/redux/actions/*"
      ],
      "@thunks/*": [
        "src/redux/thunks/*"
      ],
      "@selectors/*": [
        "src/redux/selectors/*"
      ],
      "@api/*": [
        "src/api/*"
      ]
    },
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}